{
  
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["src", "src/index.ts"],
  "exclude": ["src/examples"]
}
